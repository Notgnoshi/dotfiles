{
    "workbench.startupEditor": "newUntitledFile",
    "workbench.statusBar.feedback.visible": false,
    "editor.multiCursorModifier": "ctrlCmd",
    "editor.wordWrap": "wordWrapColumn",
    "editor.wrappingIndent": "same",
    "editor.wordWrapColumn": 100,
    "editor.acceptSuggestionOnEnter": "smart",
    "editor.cursorBlinking": "smooth",
    "editor.dragAndDrop": false,
    "editor.rulers": [100, 120],
    "editor.smoothScrolling": true,
    "editor.quickSuggestions": {
        "other": true,
        "comments": false,
        "strings": true
    },
    "editor.renderLineHighlight": "all",
    "explorer.openEditors.visible": 0,
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/__pycache__": true,
        "**/.vscode": false,
        "**/*.pyc": true,
        "**/*.aux": true,
        "**/*.bbl": true,
        "**/*.blg": true,
        "**/*.fdb_latexmk": true,
        "**/*.fls": true,
        "**/*.log": true,
        "**/*.out": true,
        "**/*.pdf": true,
        "**/*.synctex.gz": true,
        "**/*.tdo": true,
        "**/*.toc": true,
    },
    "search.useIgnoreFiles": false,
    "debug.inlineValues": false,
    "python.autoComplete.preloadModules": ["numpy", "sympy", "scipy", "keras"],
    "python.pythonPath": "/usr/bin/env python3",
    "python.unitTest.unittestEnabled": true,
    "python.unitTest.cwd": "${workspaceFolder}",
    "python.unitTest.unittestArgs": [
        "-v",
        "-s",
        "tests",
        "-p",
        "test*.py"
      ],
    "python.linting.enabled": true,
    "python.linting.pylintEnabled": true,
    "python.linting.pylintArgs": ["--rcfile", "~/.pylintrc"],
    "python.linting.pylintUseMinimalCheckers": false,
    "latex-workshop.chktex.enabled": true,
    "latex-workshop.chktex.args.active": [
        "-wall",
        "-n22",
        "-n30",
        "-n46",
        "-e16",
        "-n36",
        "-n45",
        "-q"
    ],
    "latex-workshop.chktex.args.root": [
        "-wall",
        "-n22",
        "-n30",
        "-n46",
        "-e16",
        "-n36",
        "-n45",
        "-q"
    ],
    "latex-workshop.latex.toolchain": [
        {
            "command": "latexmk",
            "args": [
            "-synctex=1",
            "-interaction=nonstopmode",
            "-file-line-error",
            "-shell-escape",
            "-pdf",
            "%DOC%"
            ]
        }
    ],
    "latex-workshop.latex.autoBuild.onSave.enabled": false,
    "[markdown]": {
        "editor.wordWrap": "wordWrapColumn",
        "editor.quickSuggestions": false
    },
    "markdown.preview.scrollEditorWithPreview": false,
    "markdown.preview.scrollPreviewWithEditorSelection": false,
    "workbench.colorTheme": "Monokai Dimmed",
    "editor.minimap.renderCharacters": false,
    "editor.minimap.showSlider": "always",
    "cSpell.userWords": [
        "adjacents",
        "conveniency",
        "coord",
        "eigensolver",
        "eigenvectors",
        "elementwise",
        "hashable",
        "hermitian",
        "hexgrid",
        "jupyter",
        "matlab",
        "numpy",
        "parallelization",
        "parallelized",
        "precomputed",
        "quadsect",
        "quadsection",
        "recurse",
        "unvalidated"
    ],
    "window.zoomLevel": -1,
}
